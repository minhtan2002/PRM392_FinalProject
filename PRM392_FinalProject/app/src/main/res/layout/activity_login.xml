<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="@null"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvProfile_Name"
        android:layout_width="379dp"
        android:layout_height="40dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="19dp"
        android:text="Đăng nhập bằng Riot ID"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="379dp"
        android:layout_height="44dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="19dp"
        android:text="Thông tin đăng nhập của bạn sẽ được gửi trực tiếp đến Riot Game."
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProfile_Name" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="379dp"
        android:layout_height="540dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#000000"
        android:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/jett_full_body_3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="380dp"
        android:layout_height="650dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#A44D5273"
        android:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="372dp"
        android:layout_height="560dp"
        android:layout_marginTop="172dp"
        android:background="#FFFFFF"
        android:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="127dp"
        android:layout_height="75dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/riotgames_icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="146dp"
        android:layout_height="42dp"
        android:layout_marginTop="228dp"
        android:text="Đăng nhập"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_register_username"
        android:layout_width="315dp"
        android:layout_height="66dp"
        android:layout_marginTop="292dp"
        android:background="#46A5A0A0"
        android:ems="10"
        android:hint="Tên người dùng"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:textColorHint="#7A7575"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvProfile_Name" />

    <EditText
        android:id="@+id/edt_register_password"
        android:layout_width="315dp"
        android:layout_height="66dp"
        android:layout_marginTop="380dp"
        android:background="#46A5A0A0"
        android:ems="10"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColorHint="#7A7575"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="234dp"
        android:layout_height="66dp"
        android:layout_marginTop="456dp"
        android:backgroundTint="@color/red"
        android:buttonTint="@color/red"
        android:checked="false"
        android:drawableTint="@color/red"
        android:foregroundTint="@color/red"
        android:text="@string/check_box_text"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.232"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_register"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="536dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_custom"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/btn_forgotpassword"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginTop="648dp"
        android:background="#00FFFFFF"
        android:text="Không thể đăng nhập?"
        android:textColor="#7A7575"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_back_login"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginTop="688dp"
        android:background="#00FFFFFF"
        android:text="Tạo tài khoản"
        android:textColor="#7A7575"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>